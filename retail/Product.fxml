<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Point3D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400" prefWidth="600.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="retail.ProductController">
    <children>
        <TableView fx:id="tblProducts" layoutX="20.0" layoutY="20.0" prefHeight="200" prefWidth="560.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                <TableColumn fx:id="colName" prefWidth="200" text="Name" />
                <TableColumn fx:id="colPrice" prefWidth="150" text="Price" />
                <TableColumn fx:id="colQuantity" prefWidth="150" text="Quantity" />
            </columns>
        </TableView>
        <TextField fx:id="txtName" layoutX="38.0" layoutY="239.0" prefHeight="32.0" prefWidth="160.0" promptText="Product Name" />
        <TextField fx:id="txtPrice" layoutX="220.0" layoutY="239.0" prefHeight="32.0" prefWidth="160.0" promptText="Price" />
        <TextField fx:id="txtQuantity" layoutX="407.0" layoutY="237.0" prefHeight="36.0" prefWidth="160.0" promptText="Quantity">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <rotationAxis>
            <Point3D />
         </rotationAxis></TextField>

        <Button fx:id="btnAdd" layoutX="80.0" layoutY="300.0" onAction="#addProduct" text="Add" />
        <Button fx:id="btnUpdate" disable="true" layoutX="160.0" layoutY="300.0" onAction="#updateProduct" text="Update" />
        <Button fx:id="btnDelete" disable="true" layoutX="261.0" layoutY="300.0" onAction="#deleteProduct" text="Delete" />
    </children>
</AnchorPane>
