<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="462.0" prefWidth="655.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="retail.BuyProductsController">
    <children>
        <VBox layoutY="14.0" prefHeight="460" prefWidth="660" spacing="10">

            <!-- Customer Info Inputs -->
            <HBox prefHeight="42.0" prefWidth="669.0" spacing="15">
                <TextField fx:id="txtCustomerName" prefHeight="36.0" prefWidth="200.0" promptText="Customer Name">
               <HBox.margin>
                  <Insets left="12.0" />
               </HBox.margin></TextField>
                <TextField fx:id="txtCustomerEmail" prefHeight="26.0" prefWidth="202.0" promptText="Email Address" />
                <TextField fx:id="txtCustomerPhone" prefHeight="32.0" prefWidth="202.0" promptText="Phone Number">
               <HBox.margin>
                  <Insets />
               </HBox.margin></TextField>
            </HBox>

            <!-- Product Table -->
            <TableView fx:id="productTable" prefHeight="329.0" prefWidth="650.0">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                    <TableColumn fx:id="colName" prefWidth="350.0" text="Product Name" />
                    <TableColumn fx:id="colPrice" prefWidth="120.0" text="Price" />
                    <TableColumn fx:id="colQuantity" prefWidth="120" text="Available Qty" />
                </columns>
            </TableView>

            <!-- Buy Button -->
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button onAction="#handleBuyProduct" prefHeight="34.0" prefWidth="178.0" text="Buy Selected Product">
               <HBox.margin>
                  <Insets left="10.0" right="20.0" />
               </HBox.margin>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets></Button>
            </HBox>

        </VBox>
    </children>
</AnchorPane>
